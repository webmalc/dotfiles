-- vim: ts=4 sw=4 noet ai cindent syntax=lua

conky.config = {
    alignment = 'top_left',
    background = true,
    border_width = 1,
    cpu_avg_samples = 2,
    default_color = 'e0e0e0',
    default_outline_color = 'grey',
    color2 = 'e0e0e0',
    color3 = 'e0e0e0',
    default_shade_color = 'white',  
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    double_buffer = true,
    use_xft = true,
    font = 'Ubuntu Mono:size=13',
    gap_x = 35,
    gap_y = 35,
    minimum_height = 5,
    minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_type = 'desktop',
    own_window_transparent = false,
    own_window_argb_visual = true,
    own_window_argb_value = 200,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false,
    border_outer_margin = 15,
}

conky.text = [[
$sysname $kernel on $machine
${color2}Host:$color $nodename
${color2}Uptime:$color $uptime
${color2}Updates:$color ${execpi 3600 apt-get upgrade -s |grep -P '^\d+ upgraded'|cut -d" " -f1}
$hr
${color2}RAM USAGE $color ${alignr} $mem/$memmax - $memperc% 
$color ${memgraph}
${color2}Swap Usage:$color $swap/$swapmax - $swapperc% ${swapbar 4}
$hr
#${color2}CPU Usage:$color ${cpu cpu0}% ${cpubar 4}
${color2}CPU GENERAL ${alignr} ${cpu cpu0}% 
$color ${cpugraph cpu0}
${color2}CPU 1 ${alignr} ${cpu cpu1}% 
$color ${cpugraph cpu1}
${color2}CPU 2 ${alignr} ${cpu cpu2}% 
$color ${cpugraph cpu2}
${color2}CPU 3 ${alignr} ${cpu cpu3}% 
$color ${cpugraph cpu3}
${color2}CPU 4 ${alignr} ${cpu cpu4}% 
$color ${cpugraph cpu4}
${color2}Frequency:$color $freq_g GHz
${color2}Processes:$color $processes  ${color2}Running:$color $running_processes
$hr
${color2}File systems:
 / $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
${color2}Networking: 
Up:$color ${upspeed enp3s0f1} ${color2} - Down:$color ${downspeed enp3s0f1}
$hr
${color2}Name              PID   CPU%   MEM%
${color3} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color3} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color3} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color3} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
#${color3} ${top name 5} ${top pid 5} ${top cpu 5} ${top mem 5}
]]
